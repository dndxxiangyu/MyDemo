<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnCallEvaluateJavascript"/>

    <Button
        android:id="@+id/btnCallJsLoadUrl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Android调用JS, loadUrl"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btnCallEvaluateJavascript"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Android调用JS, evaluateJavascript"
        app:layout_constraintBottom_toTopOf="@+id/btnCallJsLoadUrl"
        />

</android.support.constraint.ConstraintLayout>